@page
@model Banks.Pages._App.Journals.Create

<div class="row mt-5">
    <div class="col-12 mb-1">
        @if (Model.SuccessMessage != null)
        {
            <div class="alert alert-success alert-with-border alert-dismissible" role="alert">
                <i class="ti-check m-r-10"></i>
                @Model.SuccessMessage
                <button type="button" class="close" data-dismiss="alert" aria-label="بستن">
                    <i class="ti-close"></i>
                </button>
            </div>
        }
        @if (Model.ErrorMessage != null)
        {
            <div class="alert alert-danger alert-with-border alert-dismissible" role="alert">
                <i class="ti-help-alt m-r-10"></i>
                @Model.ErrorMessage
                <button type="button" class="close" data-dismiss="alert" aria-label="بستن">
                    <i class="ti-close"></i>
                </button>
            </div>
        }
    </div>
    <div class="col-12 px-3">
        <div class="card">
            <div class="card-body">
                <form method="post">
                    <div class="col-12 text-center py-3">
                        <h4 class="text-center"> ثبت مجله جدید : </h4>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="@Model.AddJournalModel.Title" class="text-right"></label>
                        <input type="text" asp-for="@Model.AddJournalModel.Title" class="form-control text-left" dir="ltr">
                        <span class="text-danger" asp-validation-for="@Model.AddJournalModel.Title"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="@Model.AddJournalModel.ISSN" class="text-right"></label>
                        <input type="text" asp-for="@Model.AddJournalModel.ISSN" class="form-control text-left" dir="ltr">
                        <span class="text-danger" asp-validation-for="@Model.AddJournalModel.ISSN"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="@Model.AddJournalModel.ISSN" class="text-right"></label>
                        <input type="text" asp-for="@Model.AddJournalModel.ISSN" class="form-control text-left" dir="ltr">
                        <span class="text-danger" asp-validation-for="@Model.AddJournalModel.ISSN"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="@Model.AddJournalModel.Website" class="text-right"></label>
                        <input type="text" asp-for="@Model.AddJournalModel.Website" class="form-control text-left" dir="ltr">
                        <span class="text-danger" asp-validation-for="@Model.AddJournalModel.Website"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="@Model.AddJournalModel.Publisher" class="text-right"></label>
                        <input type="text" asp-for="@Model.AddJournalModel.Publisher" class="form-control text-left" dir="ltr">
                        <span class="text-danger" asp-validation-for="@Model.AddJournalModel.Publisher"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="@Model.AddJournalModel.Country" class="text-right"></label>
                        <input type="text" asp-for="@Model.AddJournalModel.Country" class="form-control text-left" dir="ltr">
                        <span class="text-danger" asp-validation-for="@Model.AddJournalModel.Country"></span>
                    </div>

                    <div class="col-12">
                        <button class="btn btn-primary px-5 text-center" type="submit">ثبت</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>