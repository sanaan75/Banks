@page
@using Web
@using Entities
@model Banks.Pages._App.Journals.Records.Create
@{
}

<div class="row mt-5">
    <div class="col-12 px-3">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-6">
                        <h4 class="card-title d-flex justify-content-between align-items-center">
                            اطلاعات مجله
                        </h4>
                    </div>
                    <div class="col-6 text-right">
                        <a class="btn btn-outline-dark" asp-page="@PageUrl.JournalsRecords" asp-route-id="@Model.JournalId">
                            @Glossary.Back
                        </a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        @if (Model.SuccessMessage != null)
                        {
                            <div class="alert alert-success alert-with-border alert-dismissible" role="alert">
                                <i class="ti-check m-r-10"></i>
                                @Model.SuccessMessage
                                <button type="button" class="close" data-dismiss="alert" aria-label="بستن">
                                    <i class="ti-close"></i>
                                </button>
                            </div>
                        }
                        @if (Model.ErrorMessage != null)
                        {
                            <div class="alert alert-danger alert-with-border alert-dismissible" role="alert">
                                <i class="ti-help-alt m-r-10"></i>
                                @Model.ErrorMessage
                                <button type="button" class="close" data-dismiss="alert" aria-label="بستن">
                                    <i class="ti-close"></i>
                                </button>
                            </div>
                        }
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-12 px-5">
                        <form method="post">
                            <input type="hidden" asp-for="@Model.RecordModel.JournalId" value="@Model.JournalId"/>
                            <div class="form-group mb-3">
                                <label asp-for="@Model.RecordModel.Category" class="text-right"></label>
                                <input type="text" asp-for="@Model.RecordModel.Category" class="form-control text-left" dir="ltr">
                                <span class="text-danger" asp-validation-for="@Model.RecordModel.Category"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="@Model.RecordModel.Year" class="text-right"></label>
                                <input type="number" asp-for="@Model.RecordModel.Year" class="form-control text-left" dir="ltr">
                                <span class="text-danger" asp-validation-for="@Model.RecordModel.Year"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="@Model.RecordModel.Index" class="form-label"></label><br>
                                <select asp-for="@Model.RecordModel.Index" tabindex="-1" class="js-example-basic-single select2-hidden-accessible">
                                    <option selected="selected">انتخاب</option>
                                    @foreach (var item in Model.Indexes)
                                    {
                                        <option value="@item.Value">@item.Key</option>
                                    }
                                </select>
                            </div>

                            <div class="form-group">
                                <label asp-for="@Model.RecordModel.Type" class="form-label"></label><br>
                                <select asp-for="@Model.RecordModel.Type" tabindex="-1" class="js-example-basic-single">
                                    <option selected="selected">انتخاب</option>
                                    @foreach (var item in Model.Types)
                                    {
                                        <option value="@item.Value">@item.Key</option>
                                    }
                                </select>
                            </div>

                            <div class="form-group">
                                <label asp-for="@Model.RecordModel.QRank" class="form-label"></label><br>
                                <select asp-for="@Model.RecordModel.QRank" tabindex="-1" class="js-example-basic-single">
                                    <option selected="selected">انتخاب</option>
                                    @foreach (var item in Model.Ranks)
                                    {
                                        <option value="@item.Value">@item.Key</option>
                                    }
                                </select>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="@Model.RecordModel.IF" class="text-right"></label>
                                <input type="number" step="0.01" asp-for="@Model.RecordModel.IF" class="form-control text-left" dir="ltr">
                                <span class="text-danger" asp-validation-for="@Model.RecordModel.IF"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="@Model.RecordModel.AIF" class="text-right"></label>
                                <input type="number" step="0.01" asp-for="@Model.RecordModel.AIF" class="form-control text-left" dir="ltr">
                                <span class="text-danger" asp-validation-for="@Model.RecordModel.AIF"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="@Model.RecordModel.MIF" class="text-right"></label>
                                <input type="number" step="0.01" asp-for="@Model.RecordModel.MIF" class="form-control text-left" dir="ltr">
                                <span class="text-danger" asp-validation-for="@Model.RecordModel.MIF"></span>
                            </div>

                            <button type="submit" class="btn px-4 btn-rounded btn-primary">ثبت</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>